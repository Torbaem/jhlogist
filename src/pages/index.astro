  font-family: "Montserrat", sans-serif;
  font-size: 1.2rem;
  color: #fff;
  max-width: 700px;
  margin: 0 auto 50px;
  line-height: 1.6;
}

.contact-content {
  display: flex;
  flex-wrap: wrap;
  gap: 40px;
  margin-bottom: 50px;
  justify-content: center;
}

.contact-info {
  flex: 1;
