  border-radius: 5px;
  padding: 25px;
  display: flex;
  align-items: center;
  text-align: left;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.contact-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  border-color: rgba(228, 203, 134, 0.3);
}

.icon {
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(228, 203, 134, 0.1);
  color: #e4cb86;
  margin-right: 20px;
  flex-shrink: 0;
}

.card-content h3 {
  font-family: "Cormorant Garamond", serif;
  color: #e4cb86;
  margin-bottom: 8px;
  font-size: 1.2rem;
}

.card-content p {
  font-family: "Montserrat", sans-serif;
  color: #ccc;
  font-size: 0.95rem;
}

.contact-form-container {
  flex: 1;
  min-width: 300px;
  max-width: 550px;
}

.contact-form {
  background-color: rgba(30, 30, 30, 0.8);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 5px;
  padding: 30px;
  display: flex;
  flex-wrap: wrap;
  gap: 15px;
  position: relative;
}

.form-group {
  width: calc(50% - 10px);
  position: relative;
}

.full-width {
  width: 100%;
}

.contact-form input,
.contact-form select,
.contact-form textarea {
  width: 100%;
  padding: 12px 15px;
  background-color: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 4px;
  color: #fff;
  font-family: "Montserrat", sans-serif;
  font-size: 0.9rem;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.contact-form input:focus,
.contact-form select:focus,
.contact-form textarea:focus {
  outline: none;
  border-color: #e4cb86;
  box-shadow: 0 0 0 2px rgba(228, 203, 134, 0.2);
}

.contact-form input::placeholder,
