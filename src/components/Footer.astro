  <style>
    .footer {
      background-color: #0a0a0a;
      color: #fff;
      padding: 60px 5% 30px;
      position: relative;
      font-family: 'Montserrat', sans-serif;
    }
  
    .footer-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      gap: 40px;
      margin-bottom: 50px;
    }
  
    .footer-logo {
      flex: 1;
      min-width: 250px;
      max-width: 100%;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }
  
    .footer-logo-img {
      height: 90px;
      object-fit: contain;
      margin-bottom: 15px;
    }
  
    .footer-tagline {
      font-family: 'Playfair Display', serif;
      font-style: italic;
      color: #E4CB86;
      margin-top: 0;
      font-size: 0.95rem;
      font-weight: 400;
    }
  
    .footer-links {
      flex: 2;
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      gap: 20px;
    }
  
    .footer-column {
      flex: 1;
      min-width: 200px;
    }
  
    .footer-column h3 {
      color: #E4CB86;
      font-family: 'Playfair Display', serif;
      font-size: 1.2rem;
      margin-bottom: 1.2rem;
      position: relative;
      padding-bottom: 10px;
    }
  
    .footer-column h3::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 40px;
      height: 2px;
      background-color: #E4CB86;
    }
  
    .footer-column ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }
  
    .footer-column ul li {
      margin-bottom: 10px;
    }
  
    .footer-column ul li a {
      color: #fff;
      text-decoration: none;
      transition: color 0.3s ease;
      opacity: 0.8;
      font-size: 0.95rem;
    }
  
    .footer-column ul li a:hover {
      color: #E4CB86;
      opacity: 1;
    }
  
    .contact-info li {
      display: flex;
      align-items: center;
      gap: 10px;
      margin-bottom: 15px;
      opacity: 0.8;
      font-size: 0.95rem;
    }
  
    .contact-info li i {
      color: #E4CB86;
    }
  
    .contact-info li a {
      color: #fff;
      text-decoration: none;
      transition: color 0.3s ease;
    }
  
    .contact-info li a:hover {
      color: #E4CB86;
    }
  
    .footer-social {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-bottom: 40px;
    }
  
    .social-icon {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background-color: rgba(255, 255, 255, 0.1);
      color: #fff;
      transition: all 0.3s ease;
    }
  
    .social-icon:hover {
      background-color: #E4CB86;
      color: #000;
      transform: translateY(-3px);
    }
  
    .footer-bottom {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      align-items: center;
      padding-top: 30px;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      gap: 20px;
    }
  
    .footer-bottom p {
      margin: 0;
      font-size: 0.85rem;
      opacity: 0.7;
    }
  
    .footer-legal {
      display: flex;
      gap: 15px;
      align-items: center;
    }
  
    .footer-legal a {
      color: #fff;
      text-decoration: none;
      font-size: 0.85rem;
      opacity: 0.7;
      transition: all 0.3s ease;
    }
  
    .footer-legal a:hover {
      color: #E4CB86;
      opacity: 1;
    }
  
    .divider {
      color: rgba(255, 255, 255, 0.3);
    }
  
