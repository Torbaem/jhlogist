      width: 40px;
      height: 40px;
      border-radius: 50%;
      background-color: rgba(255, 255, 255, 0.1);
      color: #fff;
      transition: all 0.3s ease;
    }
  
    .social-icon:hover {
      background-color: #E4CB86;
      color: #000;
      transform: translateY(-3px);
    }
  
    .footer-bottom {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      align-items: center;
      padding-top: 30px;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      gap: 20px;
    }
  
    .footer-bottom p {
